pipeline {
    agent any

    environment {
        // Set up any environment variables needed for the build
        DOTNET_ROOT = "/usr/local/share/dotnet/dotnet" // Path to .NET SDK
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the GitHub repository
                git credentialsId: 'your-github-credentials', url: 'https://github.com/your-github-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                // Restore NuGet packages (for .NET Core projects)
                sh 'dotnet restore /Users/manasvidhankani/Downloads/hello-net/helloworldapp.csproj'

                // Build the .NET Core application
                sh 'dotnet build /Users/manasvidhankani/Downloads/hello-net/helloworldapp.csproj'
            }
        }

        stage('Run') {
            steps {
                // Run the .NET Core application
                sh 'dotnet run --project /Users/manasvidhankani/Downloads/hello-net/helloworldapp.csproj'
            }
        }
    }
}
